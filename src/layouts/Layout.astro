---
import '../styles/global.css';
import '../styles/components.css';
import LoadingAnimation from '../components/LoadingAnimation.astro';
import { ClientRouter } from 'astro:transitions';
import websiteIconUrl from '../assets/website-icon.svg?url';
---

<!doctype html>
<html lang="en" class="first-load">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={websiteIconUrl} />
		<meta name="generator" content={Astro.generator} />
		<title>FAK 101</title>
		<ClientRouter />
	</head>
	<body class="pre-animate">
		<LoadingAnimation />
		<slot />
	</body>
</html>

<style>
	html {
		/* Always reserve vertical scrollbar space to avoid small layout shifts
		   between pages that do/don't overflow vertically. This keeps the
		   centered header content aligned consistently. */
		overflow-y: scroll;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Hide content before animation initialization to avoid first-paint flashes */
	body.pre-animate {
		visibility: hidden;
	}
</style>
